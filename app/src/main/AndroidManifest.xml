<?xml version="1.0" encoding="utf-8"?>
<!-- Android Manifest File -->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions Section -->

    <!-- Permission for coarse location access, useful for features like geofencing -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permission for fine location access, necessary for features like map pinpointing -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Permission for internet access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Application Section -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OC_P7_Go4Lunch">

        <!-- Activities Section -->

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings" />

        <activity
            android:name="com.firebase.ui.auth.KickoffActivity"
            android:theme="@style/MyFirebaseUIToolbar"
            tools:replace="android:theme" />

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" />

        <!-- Restaurant Detail Activity -->
        <activity
            android:name=".activities.RestaurantDetail"
            android:theme="@style/AppTheme"
            android:exported="true" />

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme"
            android:exported="true">

            <!-- Intent filter to launch this activity as the main entry point of the app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- Meta-data Section -->

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>

