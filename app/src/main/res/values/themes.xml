<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Theme.OC_P7_Go4Lunch" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D3352A</item>
        <item name="colorPrimaryVariant">#292828</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <!-- FirebaseUI -->
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">#D3352A</item>
        <item name="colorPrimaryDark">#8A8989</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="Theme.OC_P7_Go4Lunch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OC_P7_Go4Lunch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyFirebaseUIToolbar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#D3352A</item>
        <item name="colorPrimaryDark">#978A8A</item>
        <item name="android:windowBackground">@drawable/lunch_time</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <!-- Autocomplete search button -->
    <style name="CustomAutocompleteFragmentStyle" parent="Theme.AppCompat.Light">
        <!-- Change color of the search icon -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/background_image_background</item>
        <item name="android:textStyle">bold</item>

    </style>



</resources>
