<resources>

    <!-- Base application theme. -->
    <style name="Theme.OC_P7_Go4Lunch" parent="Theme.Design.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF3300</item>
        <item name="colorPrimaryVariant">#030303</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- FirebaseUI -->
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">#FF3300</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowBackground">@drawable/bolo</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>
    <style name="Theme.OC_P7_Go4Lunch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.OC_P7_Go4Lunch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
