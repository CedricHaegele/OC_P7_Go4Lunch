<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Theme.OC_P7_Go4Lunch" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF3300</item>
        <item name="colorPrimaryVariant">#292828</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- FirebaseUI -->
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">#FF3300</item>
        <item name="colorPrimaryDark">#FFFDFD</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="Theme.OC_P7_Go4Lunch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OC_P7_Go4Lunch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyFirebaseUIToolbar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/background_image_background</item>
    </style>


</resources>
